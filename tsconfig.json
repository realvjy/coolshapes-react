{
  "include": ["./src/**/*"],

  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "target": "ES2015",
    "module": "ESNext",
    "lib": ["ES2016", "esnext", "DOM"],
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist"
  },
  "exclude": ["node_modules", "dist", "tests"]
}
